<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.2//EN"
    "http://java.sun.com/j2ee/dtds/web-app_2_2.dtd">

<web-app>
    <display-name>Cancer Control PLANET</display-name>
    <description>
      This is the Cancer Control PLANET site (cancercontrolplanet.cancer.gov).
      For information, please contact Lewellyn Belber (lewellyn.belber@matthewsgroup.com)
      or James Juran (juranj@mail.nih.gov).
    </description>
    <context-param>
        <param-name>DBURL</param-name>
        <param-value>jdbc:oracle:oci8:@isdbp2</param-value>
    </context-param>
    <context-param>
        <param-name>DBUser</param-name>
        <param-value>pma_web_user</param-value>
    </context-param>
    <context-param>
        <param-name>DBPass</param-name>
        <param-value>pjc242323</param-value>
    </context-param>
    <context-param>
        <param-name>DBMinConnections</param-name>
        <param-value>6</param-value>
    </context-param>
    <context-param>
        <param-name>CordaExternalAddress</param-name>
        <param-value>http://cancercontrolplanet.cancer.gov/servlet/ctRedirector</param-value>
    </context-param>
    <context-param>
        <param-name>CordaClusterAddress</param-name>
        <param-value>http://cancercontrolplanet.cancer.gov/servlet/ctcm</param-value>
    </context-param>
    <servlet>
        <servlet-name>ctRedirector</servlet-name>
        <servlet-class>ctRedirector</servlet-class>
        <init-param>
            <param-name>CordaServer</param-name>
            <param-value>procyon.cit.nih.gov:2001</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>ctcm</servlet-name>
        <servlet-class>ctClusterMonitor</servlet-class>
        <init-param>
            <param-name>ClusterAddress</param-name>
            <param-value>procyon.cit.nih.gov:2002,spica.cit.nih.gov:2002</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>ConnPoolInitServlet</servlet-name>
        <servlet-class>gov.nci.util.ConnPoolInitServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>NCIPopChartInitServlet</servlet-name>
        <servlet-class>gov.nci.corda.NCIPopChartInitServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>ctRedirector</servlet-name>
        <url-pattern>/servlet/ctRedirector/</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ctcm</servlet-name>
        <url-pattern>/servlet/ctcm</url-pattern>
    </servlet-mapping>
</web-app>
