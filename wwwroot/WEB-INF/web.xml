<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.2//EN"
    "http://java.sun.com/j2ee/dtds/web-app_2_2.dtd">

<web-app>
    <display-name>Cancer Control PLANET</display-name>
    <description>
      This is the Cancer Control PLANET site (cancercontrolplanet.cancer.gov).
      For information, please contact Tanuj Shroff (shroffta@mail.nih.gov).
    </description>
    <session-config>
        <session-timeout>60</session-timeout>
        <cookie-config>  
           <http-only>true</http-only>
        </cookie-config> 
    </session-config>
    <context-param>
        <param-name>DBURL</param-name>
        <param-value>@DB_URL@</param-value>
    </context-param>
    <context-param>
        <param-name>DBUser</param-name>
        <param-value>@DB_USER@</param-value>
    </context-param>
    <context-param>
        <param-name>DBPass</param-name>
        <param-value>@DB_PASSWD@</param-value>
    </context-param>
    <context-param>
        <param-name>DBMinConnections</param-name>
        <param-value>6</param-value>
    </context-param>
    <context-param>
        <param-name>CordaExternalAddress</param-name>
        <param-value>@CORDA_EXTERNAL_ADDRESS@</param-value>
    </context-param>
    <context-param>
        <param-name>CordaInternalAddress</param-name>
        <param-value>@CORDA_INTERNAL_ADDRESS@</param-value>
    </context-param>
    <servlet>
        <servlet-name>ctRedirector</servlet-name>
        <servlet-class>ctRedirector</servlet-class>
        <init-param>
            <param-name>CordaServer</param-name>
            <param-value>@CORDA_SERVER@</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>ConnPoolInitServlet</servlet-name>
        <servlet-class>gov.nci.util.ConnPoolInitServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>NCIPopChartInitServlet</servlet-name>
        <servlet-class>gov.nci.corda.NCIPopChartInitServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>ctRedirector</servlet-name>
        <url-pattern>/servlet/ctRedirector</url-pattern>
    </servlet-mapping>
   <error-page>
      <error-code>404</error-code>
      <location>/problem.html</location>
   </error-page>
</web-app>